{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C File",
            "type": "shell",
            "command": "${workspaceFolder}/bin/compile_c.sh",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-e",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Compile C Folder",
            "type": "shell",
            "command": "${workspaceFolder}/bin/compile_c.sh",
            "args": [
                "-o",
                "${fileDirname}/program.out",
                "-e",
                "${fileDirname}/*.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Cleanup Files",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "rm -f ${fileDirname}/*.out && rm -rf ${fileDirname}/*.out.dSYM"
            ],
            "problemMatcher": []
        }
    ]
}
